<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnActivityTracker"
        android:layout_width="331dp"
        android:layout_height="81dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="@color/black"
        android:text="Activity Tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSleepTracker"
        android:layout_width="331dp"
        android:layout_height="81dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/black"
        android:text="Sleep Tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnActivityTracker" />

    <Button
        android:id="@+id/btnWaterReminder"
        android:layout_width="331dp"
        android:layout_height="81dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/black"
        android:text="Water Reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSleepTracker" />

</androidx.constraintlayout.widget.ConstraintLayout>