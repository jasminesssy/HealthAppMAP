<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="145dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="Salud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="327dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="Salud helps you easily track and manage your health, offering personalized toold and expert guidance to keep you on top of your well-being. Access everything you need to live a healthier lifeâ€” anytime, anywhere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/btnActivityTracker"
        android:layout_width="331dp"
        android:layout_height="81dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/black"
        android:text="Activity Tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <Button
        android:id="@+id/btnSleepTracker"
        android:layout_width="331dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="Sleep Tracker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnActivityTracker" />

    <Button
        android:id="@+id/btnDrinkReminder"
        android:layout_width="331dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="Drink Reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSleepTracker" />

    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:text="Update Profile"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="636dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDrinkReminder" />

    <Button
        android:id="@+id/btnDeleteProfile"
        android:layout_width="107dp"
        android:layout_height="54dp"
        android:text="Delete Profile"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="634dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUpdateProfile" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:text="History"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="656dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteProfile"/>


</androidx.constraintlayout.widget.ConstraintLayout>